<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/empty_collection_bg"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/eaglesoft_collection_relay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eaglesoft_collection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

        <im.actor.sdk.controllers.contacts.view.MemberSideBar
            android:id="@+id/side_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/empty_collection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/contacts_empty_short"
        android:textSize="16sp"/>

</FrameLayout>