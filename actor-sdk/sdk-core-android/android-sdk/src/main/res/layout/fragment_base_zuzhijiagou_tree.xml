<?xml version="1.0" encoding="utf-8"?><!-- ListView tree字段 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="?android:attr/spinnerItemStyle"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivExEc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"></ImageView>


        <TextView
            android:id="@+id/danWeiDialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="2dip"
            android:text="111"
            android:textColor="#ff000000"
            android:textSize="16sp"></TextView>


        <CheckBox
            android:id="@+id/chbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ivExEc"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#ff000000"
            android:textSize="16sp">
        </CheckBox>

        <!-- <com.eaglesoft.checkbox.SmoothCheckBox
            android:id="@+id/chbSelect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:clickable="false"
            android:paddingRight="8dp"
            app:color_checked="#447eeb" />-->
    </LinearLayout>



        <TextView
            android:id="@+id/zuzhijiagou_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"
            android:padding="0dp"/>


</LinearLayout>