<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pageEnd"
        android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/pageEnd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/selector_hover"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/root_page1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/root_Image1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/tabicon_contactshighlighted"/>

                <TextView
                    android:id="@+id/root_text1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/main_bar_contacts"
                    android:textColor="@color/selector_ripple"
                    android:textSize="13.0sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/root_page2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/root_Image2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/tabicon_chat"/>

                <TextView
                    android:id="@+id/root_text2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/main_bar_chats"
                    android:textColor="@color/action"
                    android:textSize="13.0sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/root_page3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/root_Image3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/tabicon_settings"/>

                <TextView
                    android:id="@+id/root_text3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/main_bar_organizational"
                    android:textColor="@color/selector_ripple"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/root_page4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/root_Image4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/tabicon_settings"/>

                <TextView
                    android:id="@+id/root_text4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/profile_title"
                    android:textColor="@color/selector_ripple"
                    android:textSize="13.0sp" />
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>